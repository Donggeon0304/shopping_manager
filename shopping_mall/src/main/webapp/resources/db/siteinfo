create table siteinfo(
sidx int(5) not null auto_increment,
page_name varchar(200) not null,
admin_email varchar(200) not null,
point_use varchar(1) not null,
join_point int(5) not null,
join_level int(3) not null,
com_name varchar(50) not null,
business_num varchar(15) not null,
ceo_name varchar(20) not null,
ceo_tel varchar(13) not null,
mob_num varchar(30) null,
vat_num varchar(30) null,
com_post varchar(10) not null,
com_address varchar(200) not null,
info_name varchar(20) not null,
info_email varchar(200) not null,
primary key(sidx),
unique (page_name),
unique (com_name),
unique (business_num),
unique (com_post),
unique (com_address)
);